<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
<skipIfNotSupported/>
<programGroup defaultName="Newton Adventure" location="applications"/>
<shortcut name="Newton Adventure"
        target="$JAVA_HOME\bin\javaw.exe"
	commandLine="-jar  &quot;$INSTALL_PATH\${newton_adventure_build_final_name}&quot;"
        description="Launch Newton Adventure"
        workingDirectory="$INSTALL_PATH"
        iconFile="$INSTALL_PATH\icon.ico"
        initialState="normal"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no">
	<createForPack name="Core"/>
</shortcut>

<shortcut name="Newton Adventure Safe Launcher"
        target="$JAVA_HOME\bin\javaw.exe"
	commandLine="-jar  &quot;$INSTALL_PATH\${newton_adventure_build_final_name}&quot; --safe"
        description="Launch Newton Adventure in safe mode"
        workingDirectory="$INSTALL_PATH"
        iconFile="$INSTALL_PATH\icon.ico"
        initialState="normal"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no">
	<createForPack name="Core"/>
</shortcut>

<shortcut
 		name="Uninstall Newton Adventure"
		target="$JAVA_HOME\bin\javaw.exe"
		workingDirectory=""
		commandLine="-jar &quot;$INSTALL_PATH\Uninstaller\uninstaller.jar&quot;"
 		description="Run me with administrator privilege to uninstall Newton Adventure"
 		initialState="normal"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no" >
	<createForPack name="Core"/>
</shortcut>


</shortcuts>
